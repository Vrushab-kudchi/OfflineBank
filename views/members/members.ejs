<%- include('../Components/Header.ejs') %>
    <%- include('../Components/Navbar.ejs') %>
        <div class="card card-outline card-danger bg-dark my-4 mx-5 px-2">
            <h3 class="card-header text-center">Members List</h3>
            <div class=" table-responsive">
                <table class="table table-striped table-bordered table-secondary">
                    <thead class="table-dark">
                        <tr>
                            <th>Member No</th>
                            <th>Member Name</th>
                            <th>Branch</th>
                            <th>Joining Date</th>
                            <th>Aadhar No</th>
                            <th>Pancard No</th>
                            <th>Phone No</th>
                            <th>Status</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        <!-- Add your table data rows here -->
                        <% members.forEach(member=> { %>
                            <tr>
                                <td>
                                    <%= member.Member_id %>
                                </td>
                                <td>
                                    <%= member.First_name %>
                                        <%= member.Last_name %>
                                </td>
                                <td>
                                    <%= member.Branch_code %>
                                </td>
                                <td>
                                    <%= member.Joining_date %>
                                </td>
                                <td>
                                    <%= member.Aadhar_no %>
                                </td>
                                <td>
                                    <%= member.Pan_no %>
                                </td>
                                <td>
                                    <%= member.Phone_no %>
                                </td>
                                <td>
                                    <%= member.Status %>
                                </td> <!-- Display the "Status" value for each member -->
                                <td>
                                    <a class="fa-solid fa-pen-to-square" style="color: #000000;"
                                        href="/member/edit/<%= member.Member_id %>"></a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <%- include('../Components/Footer.ejs') %>
