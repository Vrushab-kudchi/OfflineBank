<%- include('../Components/Header.ejs') %>
    <%- include('../Components/Navbar.ejs') %>

        <div class="container text-center">

            <form action="/branch/edit/" method="post">
                <div class="card card-outline card-danger bg-dark my-4">
                    <div class="card-body">
                        <h3 class="card-header text-center">Branch Information</h3>

                        <div class="row my-2">
                            <div class="col-md-3">
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">Branch Name</label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black bg-black">Branch Name</div>
                                        <input type="text" class="form-control" name="Branch_name" value="<%= data.Branch_name %>" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">Branch code</label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black">Branch code</div>
                                        <input type="text" class="form-control" name="Branch_code"
                                            value="<%= data.Branch_code %>" readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">Opening Date</label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black">Opening Date</div>
                                        <input type="date" class="form-control" id="Opening_date" name="Opening_date"
                                            value="<%= data.Opening_date %>" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">IFSC Code</label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black bg-black">IFSC Code</div>
                                        <input type="text" class="form-control" name="Ifsc_code"
                                            value="<%= data.Ifsc_code %>" />
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="card card-outline card-danger bg-dark my-4">
                    <div class='card-body'>
                        <h3 class="card-header text-center">Branch Address</h3>


                        <div class='row my-2'>
                            <div class='col-md-6'>
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">H.no</label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black ">Address</div>
                                        <input type="text" class="form-control" name="Address"
                                            value="<%= data.Address %>" />
                                    </div>
                                </div>
                            </div>
                            <div class='col-md-6'>
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">Galli </label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black ">Galli/Area</div>
                                        <input type="text" class="form-control" name="Galli"
                                            value="<%= data.Galli %>" />
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class='row my-2'>
                            <div class='col-md-6'>
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">Street</label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black ">Street</div>
                                        <input type="text" class="form-control" name="Street"
                                            value="<%= data.Street %>" />
                                    </div>
                                </div>
                            </div>
                            <div class='col-md-6'>
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">Landmark</label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black ">Landmark</div>
                                        <input type="text" class="form-control" name="Landmark"
                                            value="<%= data.Landmark %>" />
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class='row my-2'>
                            <div class='col-md-6'>
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">Talukla</label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black ">Taluka</div>
                                        <input type="text" class="form-control" name="Taluka"
                                            value="<%= data.Taluka %>" />
                                    </div>
                                </div>
                            </div>
                            <div class='col-md-6'>
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">District</label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black ">District</div>
                                        <input type="text" class="form-control" name="District"
                                            value="<%= data.District %>" />
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class='row my-2'>
                            <div class='col-md-6'>
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">State</label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black ">State</div>
                                        <select class="form-select" name="State" value="<%= data.State %>">
                                            <option value="">Select a state</option>
                                            <option value="Andhra Pradesh">Andhra Pradesh</option>
                                            <option value="Arunachal Pradesh">Arunachal Pradesh</option>
                                            <option value="Assam">Assam</option>
                                            <option value="Bihar">Bihar</option>
                                            <option value="Chhattisgarh">Chhattisgarh</option>
                                            <option value="Goa">Goa</option>
                                            <option value="Gujarat">Gujarat</option>
                                            <option value="Haryana">Haryana</option>
                                            <option value="Himachal Pradesh">Himachal Pradesh</option>
                                            <option value="Jharkhand">Jharkhand</option>
                                            <option value="Karnataka" selected>Karnataka</option>
                                            <option value="Kerala">Kerala</option>
                                            <option value="Madhya Pradesh">Madhya Pradesh</option>
                                            <option value="Maharashtra">Maharashtra</option>
                                            <option value="Manipur">Manipur</option>
                                            <option value="Meghalaya">Meghalaya</option>
                                            <option value="Mizoram">Mizoram</option>
                                            <option value="Nagaland">Nagaland</option>
                                            <option value="Odisha">Odisha</option>
                                            <option value="Punjab">Punjab</option>
                                            <option value="Rajasthan">Rajasthan</option>
                                            <option value="Sikkim">Sikkim</option>
                                            <option value="Tamil Nadu">Tamil Nadu</option>
                                            <option value="Telangana">Telangana</option>
                                            <option value="Tripura">Tripura</option>
                                            <option value="Uttar Pradesh">Uttar Pradesh</option>
                                            <option value="Uttarakhand">Uttarakhand</option>
                                            <option value="West Bengal">West Bengal</option>
                                            {/* <!-- You can add more states here --> */}
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class='col-md-6'>
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">Country</label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black ">Country</div>
                                        <select class="form-select" name="Country" value="<%= data.Country %>">
                                            <option value="India">India</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class='row my-2'>
                            <div class='col-md-6'>
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">City</label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black ">City</div>
                                        <input type="text" class="form-control" name="City" value="<%= data.City %>" />
                                    </div>
                                </div>
                            </div>
                            <div class='col-md-6'>
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">Pincode</label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black ">Pincode</div>
                                        <input type="text" class="form-control" name="Pincode"
                                            value="<%= data.Pincode %>" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-header"></div>
                        <h3 class="card-header text-center">Contact Information</h3>
                        <div class='row my-2'>
                            <div class='col-md-4'>
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">Phone No</label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black ">Phone No</div>
                                        <input type="text" class="form-control" name="Phone_no"
                                            value="<%= data.Phone_no %>" />
                                    </div>
                                </div>
                            </div>
                            <div class='col-md-4'>
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">Telephone No</label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black ">Telephone No</div>
                                        <input type="text" class="form-control" name="Telephone_no"
                                            value="<%= data.Telephone_no %>" />
                                    </div>
                                </div>
                            </div>
                            <div class='col-md-4'>
                                <div class="col-auto">
                                    <label class="visually-hidden" for="autoSizingInputGroup">Email ID</label>
                                    <div class="input-group">
                                        <div class="input-group-text bg-black ">Email ID</div>
                                        <input type="text" class="form-control" name="Email_id"
                                            value="<%= data.Email_id %>" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-lg btn-success text-center">Update</button>
            </form>
        </div>

        <%- include('../Components/Footer.ejs') %>
